extends ./layout

block content
    if !data
        h2 Welcome! Please log in.
        p
            a(href='/auth/spotify') login
    else
        div.row
            div.col-md-3
                h4 The top artists you have
                div.seed
                    svg#artists
                h4 The artists you follow
                div.seed
                    svg#follow-artists
                h4 The top tracks you have
                div.seed
                    svg#tracks
                h4 The top genres you have
                div.seed
                    svg#genres
            div.col-md-5
                h4 Seeds based recommendations
                label Weight
                div#wg-slider.top-space
                    div#custom-handle.ui-slider-handle
                div.row.top-space
                    div.col-md-4
                        p Artist seeds
                        div.seed-block#sel-artists
                    div.col-md-4
                        p Track seeds
                        div.seed-block#sel-tracks
                    div.col-md-4
                        p Genre seeds
                        div.seed-block#sel-genres
                h4 Artists based recommendations
                label Weight
                div#wg-slider-2.top-space
                    div#custom-handle-2.ui-slider-handle
                div.row.top-space
                    div#artist-block
                        svg(width="100%" height="100%")
            div.col-md-4
                h4 Seeds based recommendations
                label Number of recommendations
                select#number(name="number")
                    option 10
                    option 20
                    option 50
                    option 100
                    option all
                div.recom
                    svg#recom-seed
                h4 Artists based recommendations
                div.recom
                    svg#recom-artist